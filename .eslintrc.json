{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-redeclare": [
            "error"
        ],
        "no-undef": [
            "error"
        ]
    },
    "globals": {
        "console": "readonly"
    }
}